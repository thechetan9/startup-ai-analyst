# Frontend Environment Variables Template
# Copy to .env.local and fill in your values

# Firebase Configuration (all required)
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id-here
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key-here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id-here.firebaseapp.com
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id-here.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-firebase-app-id

# Backend API URL
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# For production deployment:
# NEXT_PUBLIC_BACKEND_URL=https://your-backend-url.run.app
